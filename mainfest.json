{
    "display_information": {
        "name": "r2d2",
        "description": "A simple slack app to run scripts, and response to webhooks",
        "background_color": "#48494d"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": true,
            "messages_tab_read_only_enabled": true
        },
        "bot_user": {
            "display_name": "r2d2",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/check-version",
                "url": "https://ab22-75-166-225-38.ngrok-free.app/slack/events",
                "description": "what version of the app is installed",
                "should_escape": false
            }
        ],
        "shortcuts": [
            {
                "name": "Check app version",
                "type": "global",
                "callback_id": "shortcut_check_version",
                "description": "Checks if you are on the latest version of the app"
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "chat:write",
                "app_mentions:read",
                "channels:history",
                "groups:history",
                "im:history",
                "mpim:history",
                "links:read",
                "users:read",
                "reactions:read",
                "commands"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "https://ab22-75-166-225-38.ngrok-free.app/slack/events",
            "bot_events": [
                "app_home_opened",
                "app_mention",
                "app_uninstalled",
                "link_shared",
                "message.channels",
                "message.groups",
                "message.im",
                "message.mpim",
                "reaction_added",
                "user_status_changed"
            ]
        },
        "interactivity": {
            "is_enabled": true,
            "request_url": "https://ab22-75-166-225-38.ngrok-free.app/slack/events"
        },
        "org_deploy_enabled": true,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}
